@* Ajout des règles ici :     CLIENT SIDE *@

<script>
    $.validator.addMethod("datepasseevalid", function (value, element) {

        var dateToday = new Date();
        return new Date(value) <= dateToday;
    }, "JQuery Client-Side: Ne peut pas être dans le futur");

    $.validator.unobtrusive.adapters.addBool("datepasseevalid");
</script>