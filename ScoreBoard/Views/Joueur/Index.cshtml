@*Cette vue doit afficher la liste des joueurs*@
@model IEnumerable<ScoreBoard.Models.Joueur>
<h1>Nos joueurs</h1>
<div class="row">
    <div class="col-md-12">
        <h2>Top Players</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Courriel</th>
                    <th>Actions: Modifier/Supprimer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Joueur joueur in Model)
                {
                    <tr>
                        <td>@joueur.Nom</td>
                        <td>@joueur.Prenom</td>
                        <td>@joueur.Courriel</td>
                        <td>
                            <a class="btn btn-secondary" asp-route-id="@joueur.Id" asp-action="Modifier">Modifier</a>
                            <a class="btn btn-danger" asp-route-id="@joueur.Id" asp-action="SupprimerConfirmer">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>